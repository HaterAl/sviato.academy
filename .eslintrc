{
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
    ],
    "env": {
        "browser": true,
        "node": true,
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "curly": [2, "multi-line"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "semi": ["error", "never"],

        "indent": ["error", 4, {
            "SwitchCase": 1,
        }],

        "vue/no-v-html": 0,
        "vue/html-indent": ["error", 4, {}],
    },
    "globals": {
        "defineProps": "readonly",
        "defineEmits": "readonly",
    },
}
